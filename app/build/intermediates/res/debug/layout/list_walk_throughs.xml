<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/walk_through_floor"
            android:layout_marginRight="10dp"
            android:text="floor #"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/walk_through_contractor"
            android:layout_marginRight="10dp"
            android:text="contractor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/walk_through_num_pics"
            android:layout_marginRight="10dp"
            android:text="# pics"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <ViewSwitcher
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/walk_through_list_switcher" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="date"
                android:id="@+id/walk_through_list_date"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="right" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="edit"
                    android:id="@+id/walk_through_list_edit_button"
                    android:background="#787bff51"
                    android:layout_marginRight="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delete"
                    android:id="@+id/walk_through_list_delete_button"
                    android:background="#78ff3434" />
            </LinearLayout>
        </ViewSwitcher>

    </LinearLayout>
</RelativeLayout><!-- From: file:/home/otf/Documents/code/AssesorTron/app/src/main/res/layout/list_walk_throughs.xml -->